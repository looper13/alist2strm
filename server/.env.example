# 服务器配置
PORT=3210

# 日志配置
LOG_BASE_DIR=../data/logs-example
LOG_APP_NAME=alist2strm
LOG_LEVEL=info
LOG_MAX_DAYS=30
LOG_MAX_FILE_SIZE=10

# 数据库配置
# 数据库类型: sqlite 或 postgresql (默认: sqlite)
DB_TYPE=sqlite

# SQLite配置 (当DB_TYPE=sqlite时使用)
DB_BASE_DIR=../data/db
DB_NAME=go_database.sqlite

# PostgreSQL配置 (当DB_TYPE=postgresql时使用)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=alist2strm
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=disable

# PostgreSQL连接池配置 (可选)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=60 # 分钟

# 数据库性能监控配置 (可选)
DB_SLOW_QUERY_THRESHOLD=100 # 慢查询阈值，毫秒
DB_ENABLE_PERFORMANCE_LOG=true # 是否启用性能日志
DB_PERFORMANCE_REPORT_INTERVAL=5 # 性能报告间隔，分钟

# JWT配置
JWT_SECRET_KEY=63fe1d02ac6da7fe325f3e7545f9b954dc76f25495f73f6d0c0dc82ad44d5fd3
JWT_EXPIRES_IN=168 # 7 days in hours

# 用户认证配置
USER_NAME=admin
